@model Examen.Domain.Evaluacion

@{
    ViewBag.Title = "VerPreguntasJOINS";
}

<h2>ViewBab.Title</h2>
<h2>VerPreguntasJOINS</h2>
<p>
    @Html.ActionLink("Agregar Pregunta", "AgregarPregunta", new { evaluacionId = Model.Id })
</p>

<hr />
@foreach (var pregunta in Model.Preguntas)
{
    <b>@pregunta.Texto</b>
    @Html.ActionLink("Editar Pregunta", "EditarPregunta", new { preguntaId = Model.Id })
    @Html.ActionLink("Quitaar Pregunta", "QuitarPregunta", new { preguntaId = Model.Id })
    <br />

    foreach (var opcion in pregunta.Opciones)
    {
        @opcion.Texto
        <br />
    }
    <br />
}
